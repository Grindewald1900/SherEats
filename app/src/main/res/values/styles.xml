<resources>

    <style name="Widget.Theme.SherEats.MyView" parent="">
        <item name="android:background">@color/gray_400</item>
    </style>

    <style name="NormalButton">
        <item name="android:layout_width">@dimen/dimen_80</item>
        <item name="android:layout_height">@dimen/dimen_25</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">@dimen/text_size_sub_title</item>
    </style>

    <style name="BackButton">
        <item name="android:background">@drawable/ic_baseline_arrow_back_24</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dimen_20</item>
        <item name="android:layout_marginTop">@dimen/dimen_10</item>
    </style>

    <declare-styleable name="RoundCornerImageView">
        <attr name="mCornerRadius" format="float" />
    </declare-styleable>

    <declare-styleable name="RoundImageView">
        <attr name="image_border_color" format="color"/>
        <attr name="image_border_src" format="reference|color"/>
        <attr name="image_border_url" format="string"/>
        <attr name="border_width" format="float"/>
    </declare-styleable>

    <declare-styleable name="RoundCornerButton">
        <attr name="button_border_color" format="color" />
        <attr name="background_color" format="color" />
    </declare-styleable>

    <declare-styleable name="RoundFab">
        <attr name="fab_type" format="enum">
            <enum name="square" value="0"/>
            <enum name="circle" value="1"/>
            <enum name="roundCorner" value="2"/>
        </attr>
        <attr name="fab_corner_radius" format="float"/>
    </declare-styleable>
</resources>