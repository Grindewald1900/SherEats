<resources>

    <style name="Widget.Theme.SherEats.MyView" parent="">
        <item name="android:background">@color/gray_400</item>
    </style>

    <style name="NormalButton">
        <item name="android:layout_width">@dimen/dimen_80</item>
        <item name="android:layout_height">@dimen/dimen_25</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">@dimen/text_size_sub_title</item>
    </style>

    <style name="BackButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dimen_20</item>
        <item name="android:layout_marginTop">@dimen/dimen_20</item>
    </style>

    <declare-styleable name="RoundCornerImageView">
        <attr name="mCornerRadius" format="float" />
<!--        set corner true? round : rect-->
        <attr name="isLeftTop" format="boolean"/>
        <attr name="isRightTop" format="boolean"/>
        <attr name="isLeftBottom" format="boolean"/>
        <attr name="isRightBottom" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="RoundImageView">
        <attr name="image_border_color" format="color"/>
        <attr name="image_border_src" format="reference|color"/>
        <attr name="image_border_url" format="string"/>
        <attr name="border_width" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="RoundCornerButton">
        <attr name="button_border_color" format="color" />
        <attr name="background_color" format="color" />
    </declare-styleable>

    <declare-styleable name="FavoriteButton">
        <attr name="isFav" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="SearchFilterLayout">
        <attr name="search_filter_text" format="string"/>
    </declare-styleable>

    <declare-styleable name="TransitionButton">
        <attr name="defaultColor" format="color|integer" />
        <attr name="loaderColor" format="color|integer" />
    </declare-styleable>

    <declare-styleable name="RoundFab">
        <attr name="fab_type" format="enum">
            <enum name="square" value="0"/>
            <enum name="circle" value="1"/>
            <enum name="roundCorner" value="2"/>
        </attr>
        <attr name="fab_corner_radius" format="float"/>
    </declare-styleable>
</resources>