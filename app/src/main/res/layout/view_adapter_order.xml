<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_order"
    android:padding="@dimen/dimen_20"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_10"
    android:layout_marginStart="@dimen/dimen_10"
    android:layout_marginEnd="@dimen/dimen_10"
    android:background="@drawable/shape_round_corner_20"
    >
    <ImageView
        android:id="@+id/iv_view_order_logo"
        android:layout_width="@dimen/dimen_30"
        android:layout_height="@dimen/dimen_30"
        android:src="@drawable/ic_baseline_star_24"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/tv_view_order_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_30"
        android:layout_marginStart="@dimen/dimen_5"
        android:gravity="center"
        android:textSize="@dimen/text_size_main_title"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@+id/iv_view_order_logo"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <ImageView
        android:id="@+id/iv_view_order_collect"
        android:layout_width="@dimen/dimen_30"
        android:layout_height="@dimen/dimen_30"
        android:src="@drawable/ic_baseline_star_24"
        android:layout_marginEnd="@dimen/dimen_10"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@+id/iv_view_order_logo"
        app:layout_constraintRight_toLeftOf="@+id/btn_view_order_contact"
        />
    <com.example.shereats.view.custom.RoundCornerButton
        android:id="@+id/btn_view_order_contact"
        android:layout_marginEnd="@dimen/dimen_5"
        android:text="@string/contact"
        style="@style/NormalButton"
        app:layout_constraintTop_toTopOf="@+id/tv_view_order_title"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/tv_view_order_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_30"
        android:layout_marginTop="@dimen/dimen_5"
        android:gravity="center"
        android:text="@string/f_price"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/tv_view_order_title"
        app:layout_constraintLeft_toLeftOf="@+id/iv_view_order_logo"
        />

    <TextView
        android:id="@+id/tv_view_order_content"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_60"
        android:layout_marginTop="@dimen/dimen_5"
        android:gravity="left"
        android:text="Sushi*3, Taco*2"
        app:layout_constraintTop_toBottomOf="@+id/tv_view_order_subtitle"
        app:layout_constraintLeft_toLeftOf="@+id/iv_view_order_logo"
        />

    <TextView
        android:id="@+id/tv_view_order_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="@color/gray_2"
        android:text="Released at 7:05PM, Jan 1, 2021 by Grindewald1900 "
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/tv_view_order_content"
        app:layout_constraintLeft_toLeftOf="@+id/iv_view_order_logo"
        />


</androidx.constraintlayout.widget.ConstraintLayout>