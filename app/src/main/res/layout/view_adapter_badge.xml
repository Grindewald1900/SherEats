<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_100">
    <View
        android:id="@+id/view_adapter_badge_top"
        android:layout_width="@dimen/dimen_8"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/iv_adapter_badge_logo"
        app:layout_constraintLeft_toLeftOf="@+id/iv_adapter_badge_logo"
        app:layout_constraintRight_toRightOf="@+id/iv_adapter_badge_logo"
        />
    <com.example.shereats.view.custom.RoundImageView
        android:id="@+id/iv_adapter_badge_logo"
        android:layout_width="@dimen/dimen_50"
        android:layout_height="@dimen/dimen_50"
        android:layout_marginStart="@dimen/dimen_50"
        app:image_border_color="@color/colorPrimary"
        app:border_width="@dimen/dimen_5"
        app:layout_constraintTop_toBottomOf="@+id/view_adapter_badge_top"
        app:layout_constraintBottom_toTopOf="@+id/view_adapter_badge_bottom"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <View
        android:id="@+id/view_adapter_badge_bottom"
        android:layout_width="@dimen/dimen_8"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/iv_adapter_badge_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/iv_adapter_badge_logo"
        app:layout_constraintRight_toRightOf="@+id/iv_adapter_badge_logo"
        />
    <TextView
        android:id="@+id/tv_adapter_badge_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_title"
        android:text="@string/promotion"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/dimen_10"
        app:layout_constraintTop_toTopOf="@+id/iv_adapter_badge_logo"
        app:layout_constraintBottom_toTopOf="@+id/tv_adapter_badge_date"
        app:layout_constraintLeft_toRightOf="@+id/iv_adapter_badge_logo"
        />
    <TextView
        android:id="@+id/tv_adapter_badge_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_title"
        android:text="@string/hint_no_date"
        app:layout_constraintTop_toBottomOf="@+id/tv_adapter_badge_content"
        app:layout_constraintBottom_toBottomOf="@+id/iv_adapter_badge_logo"
        app:layout_constraintLeft_toLeftOf="@+id/tv_adapter_badge_content"
        />

</androidx.constraintlayout.widget.ConstraintLayout>