<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_3"
        >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_3"
        tools:context=".view.activity.SettingActivity">

        <ImageButton
            android:id="@+id/btn_activity_setting_back"
            style="@style/BackButton"
            android:background="@drawable/ic_iconmonstr_undo_2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/tv_activity_setting_title_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:textSize="@dimen/text_size_title"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="@string/theme"
            app:layout_constraintTop_toBottomOf="@+id/btn_activity_setting_back"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
        <RelativeLayout
            android:id="@+id/rl_activity_setting_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginStart="@dimen/dimen_20"
            android:layout_marginEnd="@dimen/dimen_20"
            android:clipChildren="false"
            app:layout_constraintTop_toBottomOf="@+id/tv_activity_setting_title_one"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            >

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewpager_activity_setting_theme"
                android:layout_width="@dimen/dimen_150"
                android:layout_height="@dimen/dimen_300"
                android:layout_centerHorizontal="true"
                android:clipChildren="false"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_activity_setting_title_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_30"
            android:textSize="@dimen/text_size_title"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="@string/badge"
            app:layout_constraintTop_toBottomOf="@+id/rl_activity_setting_theme"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
        <GridLayout
            android:id="@+id/badge_activity_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:columnCount="5"
            android:rowCount="2"
            android:useDefaultMargins="true"
            app:layout_constraintTop_toBottomOf="@+id/tv_activity_setting_title_two"
            >
            <ImageView
                android:layout_columnWeight="1"
                android:layout_width="@dimen/widget_size_badge"
                android:layout_height="@dimen/widget_size_badge"
                android:src="@drawable/badge_1"
                />
            <ImageView
                android:layout_columnWeight="1"
                android:layout_width="@dimen/widget_size_badge"
                android:layout_height="@dimen/widget_size_badge"
                android:src="@drawable/badge_2"
                />
            <ImageView
                android:layout_columnWeight="1"
                android:layout_width="@dimen/widget_size_badge"
                android:layout_height="@dimen/widget_size_badge"
                android:src="@drawable/badge_3"
                />
            <ImageView
                android:layout_columnWeight="1"
                android:layout_width="@dimen/widget_size_badge"
                android:layout_height="@dimen/widget_size_badge"
                android:src="@drawable/badge_4"
                />

            <ImageView
                android:layout_columnWeight="1"
                android:layout_width="@dimen/widget_size_badge"
                android:layout_height="@dimen/widget_size_badge"
                android:src="@drawable/badge_5"
                />
            <ImageView
                android:layout_columnWeight="1"
                android:layout_width="@dimen/widget_size_badge"
                android:layout_height="@dimen/widget_size_badge"
                android:src="@drawable/badge_6"
                />
            <ImageView
                android:layout_columnWeight="1"
                android:layout_width="@dimen/widget_size_badge"
                android:layout_height="@dimen/widget_size_badge"
                android:src="@drawable/badge_7"
                />
            <ImageView
                android:layout_columnWeight="1"
                android:layout_width="@dimen/widget_size_badge"
                android:layout_height="@dimen/widget_size_badge"
                android:src="@drawable/badge_8"
                />
            <ImageView
                android:layout_columnWeight="1"
                android:layout_width="@dimen/widget_size_badge"
                android:layout_height="@dimen/widget_size_badge"
                android:src="@drawable/badge_9"
                />
        </GridLayout>

        <TextView
            android:id="@+id/tv_activity_setting_title_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_30"
            android:textSize="@dimen/text_size_title"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="@string/about"
            app:layout_constraintTop_toBottomOf="@+id/badge_activity_setting"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="1"
            android:columnCount="2"
            android:paddingBottom="@dimen/dimen_20"
            app:layout_constraintTop_toBottomOf="@+id/tv_activity_setting_title_three"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <com.example.shereats.view.custom.RoundImageView
                android:id="@+id/iv_activity_setting_yee"
                android:layout_width="@dimen/dimen_80"
                android:layout_height="@dimen/dimen_80"
                android:layout_gravity="center"
                android:layout_columnWeight="1"
                app:image_border_src="@drawable/img_yee"
                app:border_width="@dimen/dimen_5"
                app:image_border_color="@color/facebook"
                />
            <com.example.shereats.view.custom.RoundImageView
                android:id="@+id/iv_activity_setting_jo"
                android:layout_width="@dimen/dimen_80"
                android:layout_height="@dimen/dimen_80"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                app:image_border_src="@drawable/img_jo"
                app:border_width="@dimen/dimen_5"
                app:image_border_color="@color/google"
                />
        </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>
