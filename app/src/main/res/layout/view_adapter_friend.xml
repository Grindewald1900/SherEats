<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_70">
    <com.example.shereats.view.custom.RoundCornerImageView
        android:id="@+id/iv_adapter_friend"
        android:layout_width="@dimen/dimen_45"
        android:layout_height="@dimen/dimen_45"
        android:layout_marginStart="@dimen/dimen_15"
        android:scaleType="centerCrop"
        android:src="@drawable/img_user_unknown"
        app:mCornerRadius="10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/tv_adapter_friend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_15"
        android:textSize="@dimen/text_size_title"
        android:textColor="@color/black"
        android:text="@string/name"
        android:gravity="bottom"
        app:layout_constraintTop_toTopOf="@+id/iv_adapter_friend"
        app:layout_constraintLeft_toRightOf="@+id/iv_adapter_friend"
        />
    <TextView
        android:id="@+id/tv_adapter_friend_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_20"
        android:textSize="@dimen/text_size_smaller_title"
        android:text="@string/confirm"
        android:textColor="@color/gray_2"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="@+id/iv_adapter_friend"
        app:layout_constraintLeft_toLeftOf="@+id/tv_adapter_friend_name"
        app:layout_constraintRight_toLeftOf="@+id/iv_adapter_friend_notice"

        />
    <TextView
        android:id="@+id/tv_adapter_friend_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_20"
        android:textSize="@dimen/text_size_smaller_title"
        android:textColor="@color/gray_2"
        android:text="2022-01-01"
        app:layout_constraintTop_toTopOf="@+id/iv_adapter_friend"
        app:layout_constraintRight_toRightOf="parent"
        />
    <ImageView
        android:id="@+id/iv_adapter_friend_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_5"
        android:src="@drawable/shape_round_dot"
        app:layout_constraintTop_toTopOf="@+id/tv_adapter_friend_message"
        app:layout_constraintBottom_toBottomOf="@+id/tv_adapter_friend_message"
        app:layout_constraintRight_toRightOf="@+id/tv_adapter_friend_date"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="@color/gray_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/tv_adapter_friend_message"
        app:layout_constraintRight_toRightOf="@+id/tv_adapter_friend_date"
        />
</androidx.constraintlayout.widget.ConstraintLayout>