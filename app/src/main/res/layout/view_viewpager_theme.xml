<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dimen_150"
    android:layout_height="@dimen/dimen_340"
    >
    <com.grindewald1900.shereats.view.custom.RoundCornerImageView
        android:id="@+id/iv_viewpager_theme"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/theme_1"
        android:scaleType="centerCrop"
        app:mCornerRadius="50"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/iv_viewpager_theme_check"
        />
    <ImageView
        android:id="@+id/iv_viewpager_theme_check"
        android:layout_width="@dimen/dimen_20"
        android:layout_height="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_10"
        android:src="@drawable/ic_iconmonstr_checkbox"
        app:layout_constraintTop_toBottomOf="@+id/iv_viewpager_theme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>