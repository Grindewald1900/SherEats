<?xml version="1.0" encoding="utf-8"?>
<!-- View for the content of viewpager in search page -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dimen_150"
    android:layout_height="@dimen/dimen_220"
    >
    <com.grindewald1900.shereats.view.custom.RoundCornerImageView
        android:id="@+id/iv_viewpager_search_friend"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dimen_10"
        android:src="@drawable/img_portrait"
        android:scaleType="centerCrop"
        app:mCornerRadius="50"
        app:layout_constraintTop_toBottomOf="@+id/tv_viewpager_title_friend"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_viewpager_search_friend"
        />
    <TextView
        android:id="@+id/tv_viewpager_title_friend"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_title"
        android:textColor="@color/gray_3"
        android:maxLength="15"
        android:gravity="left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <com.grindewald1900.shereats.view.custom.TransitionButton
        android:id="@+id/btn_viewpager_search_friend"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_length_middle"
        android:layout_marginStart="@dimen/dimen_10"
        android:layout_marginEnd="@dimen/dimen_10"
        android:text="@string/friend_add"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_title"
        app:loaderColor="@color/white"
        app:defaultColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/iv_viewpager_search_friend"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>